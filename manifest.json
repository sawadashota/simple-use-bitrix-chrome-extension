{
  "name": "Simple Use Bitrix",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Hide unneeded elements for users who wants use Bitrix simply",
  "permissions": ["https://*.bitrix24.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://*.bitrix24.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "embeded-script.js"
  ]
}
